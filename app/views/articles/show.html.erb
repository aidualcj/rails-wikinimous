<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h1><%= @article.title %></h1>
        <div>
          <%= link_to raw('<i class="fas fa-pencil-alt"></i>'), edit_article_path(@article), class: 'btn btn-primary text-white me-2' %>
          <%= link_to raw('<i class="fas fa-trash-alt"></i>'), @article, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger text-white' %>
        </div>
      </div>
      <p><%= @article.content %></p>
      <%= link_to 'Back', articles_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>
