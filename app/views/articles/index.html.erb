<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>Articles</h1>
      <% @articles.each do |article| %>
        <div class="card mb-3">
          <div class="card-body">
            <h2><%= link_to article.title, article %></h2>
            <p><%= truncate(article.content, length: 100) %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
